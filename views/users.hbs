<html lang='uk'>
  <head>
    <meta charset='UTF-8' />
    <title>Користувачі</title>
    <link rel='stylesheet' href='/styles.css' />
  </head>
  <body>

    <h1>Список користувачів</h1>

    <ul>
      {{#each users}}
        <li>
          <span>{{this.name}} ({{this.email}}) - Вік: {{this.age}}</span>
          <div class='actions'>
            <form action='/users/delete/{{this._id}}' method='POST'>
              <button type='submit'>Видалити</button>
            </form>
            <form action='/users/update/{{this._id}}' method='POST'>
              <input
                name='name'
                placeholder="Ім'я"
                value='{{this.name}}'
                required
              />
              <input
                name='email'
                placeholder='Email'
                value='{{this.email}}'
                required
              />
              <input
                name='age'
                placeholder='Вік'
                type='number'
                value='{{this.age}}'
                required
              />
              <button type='submit'>Оновити</button>
            </form>
          </div>
        </li>
      {{/each}}
    </ul>

    <h2>Додати користувача</h2>
    <form class='add-form' action='/users' method='POST'>
      <label>Ім'я</label>
      <input name='name' placeholder="Ім'я" required />
      <label>Email</label>
      <input name='email' placeholder='Email' required />
      <label>Вік</label>
      <input name='age' placeholder='Вік' type='number' required />
      <button type='submit'>Додати</button>
    </form>

  </body>
</html>